<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darkBlue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <fragment
        android:id="@+id/imageContainer"

        android:name="com.amdi.techtouch8.Fragments.level00"
        android:layout_above="@id/buttomMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </fragment>

    <LinearLayout
        android:id="@+id/buttomMenu"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:padding="5dp"
        android:gravity="center"
        android:weightSum="10"
        android:background="@drawable/bottom_contorl_bar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/levelDown"
                android:background="@drawable/button_background"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="4dp"
                android:onClick="levelDown"
                android:src="@drawable/level_down" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/record"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="4dp"
                android:background="@drawable/button_background"
                android:onClick="recordButtonTapped"
                android:src="@drawable/record" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/levelUp"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="4dp"
                android:background="@drawable/button_background"
                android:onClick="levelUp"
                android:src="@drawable/level_up" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

           <TextView
               android:id="@+id/indicator"
               android:text="Level 1"
               android:textColor="@color/yellow"
               android:textSize="40dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/restore"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="4dp"
                android:background="@drawable/button_background"
                android:src="@drawable/restore" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/main_page"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="4dp"
                android:background="@drawable/button_background"
                android:src="@drawable/main_page" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/change_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="4dp"
                android:background="@drawable/button_background"
                android:src="@drawable/change_image" />
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>